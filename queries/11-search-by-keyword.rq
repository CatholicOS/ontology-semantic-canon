# Template for full-text search across labels, definitions, and examples
# Replace KEYWORD with your search term

PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>

SELECT DISTINCT ?entity ?type ?label ?matchedText
WHERE {
  {
    ?entity a owl:Class .
    BIND("Class" AS ?type)
    {
      ?entity rdfs:label ?matchedText .
      FILTER(REGEX(STR(?matchedText), "KEYWORD", "i"))
    }
    UNION
    {
      ?entity skos:definition ?matchedText .
      FILTER(REGEX(STR(?matchedText), "KEYWORD", "i"))
    }
    UNION
    {
      ?entity skos:altLabel ?matchedText .
      FILTER(REGEX(STR(?matchedText), "KEYWORD", "i"))
    }
  }
  UNION
  {
    ?entity a owl:ObjectProperty .
    BIND("Property" AS ?type)
    {
      ?entity rdfs:label ?matchedText .
      FILTER(REGEX(STR(?matchedText), "KEYWORD", "i"))
    }
    UNION
    {
      ?entity skos:definition ?matchedText .
      FILTER(REGEX(STR(?matchedText), "KEYWORD", "i"))
    }
  }

  OPTIONAL { ?entity rdfs:label ?label }
}
ORDER BY ?type ?label
LIMIT 50
