# CONSTRUCT query to build a graph of classes with their labels
# Useful for extracting a simplified vocabulary

PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>

CONSTRUCT {
  ?class a owl:Class ;
         rdfs:label ?label ;
         skos:prefLabel ?prefLabel ;
         skos:altLabel ?altLabel .
}
WHERE {
  ?class a owl:Class .
  OPTIONAL { ?class rdfs:label ?label }
  OPTIONAL { ?class skos:prefLabel ?prefLabel }
  OPTIONAL { ?class skos:altLabel ?altLabel }

  FILTER(BOUND(?label) || BOUND(?prefLabel))
}
LIMIT 100
